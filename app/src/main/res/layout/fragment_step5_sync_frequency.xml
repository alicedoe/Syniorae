<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_large">

    <!-- Titre de l'Ã©tape -->
    <TextView
        android:id="@+id/stepTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Ã‰tape 5/6 - FrÃ©quence de synchronisation" />

    <!-- Description -->
    <TextView
        android:id="@+id/stepDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="@dimen/text_size_medium"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stepTitle"
        tools:text="Ã€ quelle frÃ©quence voulez-vous synchroniser votre calendrier ?" />

    <!-- Options de frÃ©quence en grille compacte -->
    <LinearLayout
        android:id="@+id/frequencyOptions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stepDescription">

        <!-- PremiÃ¨re ligne : 1h et 2h -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/frequency1Hour"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="Toutes les heures"
                android:textSize="14sp"
                android:padding="8dp" />

            <Button
                android:id="@+id/frequency2Hours"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="Toutes les 2h"
                android:textSize="14sp"
                android:padding="8dp" />

        </LinearLayout>

        <!-- DeuxiÃ¨me ligne : 4h (recommandÃ©) -->
        <Button
            android:id="@+id/frequency4Hours"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:text="Toutes les 4h (recommandÃ©)"
            android:textSize="14sp"
            android:textStyle="bold"
            android:padding="8dp" />

        <!-- TroisiÃ¨me ligne : 8h et 24h -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/frequency8Hours"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="Toutes les 8h"
                android:textSize="14sp"
                android:padding="8dp" />

            <Button
                android:id="@+id/frequency24Hours"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="Une fois par jour"
                android:textSize="14sp"
                android:padding="8dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Informations sur l'impact (version compacte) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/impactCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frequencyOptions">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/batteryImpact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_small"
                android:layout_marginBottom="2dp"
                tools:text="ðŸ”‹ Impact batterie : Faible" />

            <TextView
                android:id="@+id/dataUsage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_small"
                android:layout_marginBottom="4dp"
                tools:text="ðŸ“Š Consommation data : Faible" />

            <TextView
                android:id="@+id/recommendation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_small"
                android:textStyle="italic"
                android:textColor="@color/design_default_color_primary"
                tools:text="ðŸ’¡ RecommandÃ© pour un usage normal" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Boutons de navigation -->
    <LinearLayout
        android:id="@+id/navigationButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Bouton PrÃ©cÃ©dent -->
        <Button
            android:id="@+id/previousButton"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="PrÃ©cÃ©dent"
            android:textSize="@dimen/text_size_medium" />

        <!-- Bouton Suivant -->
        <Button
            android:id="@+id/nextButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Ã‰tape suivante"
            android:textSize="@dimen/text_size_medium" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>