<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Indicateur de couleur du calendrier -->
        <View
            android:id="@+id/colorIndicator"
            android:layout_width="4dp"
            android:layout_height="0dp"
            android:background="#1976d2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Nom du calendrier -->
        <TextView
            android:id="@+id/calendarName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"
            app:layout_constraintStart_toEndOf="@id/colorIndicator"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/sharedIndicator"
            tools:text="Mon Calendrier Principal" />

        <!-- Description du calendrier -->
        <TextView
            android:id="@+id/calendarDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary"
            app:layout_constraintStart_toEndOf="@id/colorIndicator"
            app:layout_constraintTop_toBottomOf="@id/calendarName"
            app:layout_constraintEnd_toStartOf="@id/sharedIndicator"
            tools:text="Calendrier personnel pour les événements importants" />

        <!-- Indicateur de calendrier partagé -->
        <ImageView
            android:id="@+id/sharedIndicator"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="8dp"
            android:src="@android:drawable/ic_menu_share"
            android:contentDescription="Calendrier partagé"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@id/selectedIndicator"
            app:layout_constraintTop_toTopOf="@id/calendarName"
            app:layout_constraintBottom_toBottomOf="@id/calendarName"
            app:tint="?android:attr/textColorSecondary"
            tools:visibility="visible" />

        <!-- Indicateur de sélection -->
        <ImageView
            android:id="@+id/selectedIndicator"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/checkbox_on_background"
            android:contentDescription="Calendrier sélectionné"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/calendarName"
            app:layout_constraintBottom_toBottomOf="@id/calendarDescription"
            app:tint="@android:color/holo_green_dark"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>