<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Icône de l'association -->
        <TextView
            android:id="@+id/associationIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:textSize="24sp"
            android:gravity="center"
            android:background="@drawable/rounded_background_light"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="🏥" />

        <!-- Mots-clés -->
        <TextView
            android:id="@+id/associationKeywords"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/deleteButton"
            app:layout_constraintStart_toEndOf="@id/associationIcon"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="médecin, docteur, rdv" />

        <!-- Exemple d'utilisation -->
        <TextView
            android:id="@+id/associationExample"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:textSize="14sp"
            android:textColor="#757575"
            app:layout_constraintEnd_toStartOf="@id/deleteButton"
            app:layout_constraintStart_toEndOf="@id/associationIcon"
            app:layout_constraintTop_toBottomOf="@id/associationKeywords"
            tools:text="Exemple : médecin → 🏥" />

        <!-- Bouton supprimer -->
        <ImageButton
            android:id="@+id/deleteButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Supprimer l'association"
            android:src="@drawable/ic_delete_24"
            android:tint="#F44336"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>