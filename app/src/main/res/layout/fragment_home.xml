<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.fragments.home.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding_large">

        <!-- En-tête avec icône paramètre -->
        <FrameLayout
            android:id="@+id/settingsIconContainer"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/settingsIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/settings"
                android:padding="8dp"
                android:src="@drawable/ic_settings_24" />

            <!-- Overlay de progression pour l'appui long -->
            <com.syniorae.presentation.common.views.CircularProgressOverlay
                android:id="@+id/progressOverlay"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:visibility="gone" />

        </FrameLayout>

        <!-- Contenu principal en deux colonnes -->
        <LinearLayout
            android:id="@+id/mainContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/settingsIconContainer">

            <!-- Colonne gauche : Date du jour -->
            <LinearLayout
                android:id="@+id/leftColumn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/dayOfWeek"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_size_extra_large"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary_senior"
                    tools:text="Dimanche" />

                <TextView
                    android:id="@+id/dayOfMonth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_size_huge"
                    android:textStyle="bold"
                    android:textColor="@color/primary_senior"
                    tools:text="3" />

                <TextView
                    android:id="@+id/monthYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_size_large"
                    android:textColor="@color/text_secondary_senior"
                    tools:text="août 2025" />

            </LinearLayout>

            <!-- Colonne droite : Événements du jour -->
            <LinearLayout
                android:id="@+id/rightColumn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Message quand pas d'événements -->
                <TextView
                    android:id="@+id/rightColumnMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/text_secondary_senior"
                    android:visibility="gone"
                    tools:text="Aucun événement de prévu"
                    tools:visibility="visible" />

                <!-- Liste des événements du jour -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/todayEventsList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    tools:itemCount="3"
                    tools:listitem="@layout/item_today_event"
                    tools:visibility="visible" />

            </LinearLayout>

        </LinearLayout>

        <!-- Section événements futurs -->
        <LinearLayout
            android:id="@+id/futureEventsSection"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="32dp"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mainContent"
            tools:visibility="visible">

            <TextView
                android:id="@+id/futureEventsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="@string/upcoming_events"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold"
                android:textColor="@color/text_primary_senior" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/futureEventsList"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                tools:itemCount="5"
                tools:listitem="@layout/item_future_event" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>