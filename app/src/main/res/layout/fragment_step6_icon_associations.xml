<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_large">

    <!-- Titre de l'étape -->
    <TextView
        android:id="@+id/stepTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textSize="@dimen/text_size_extra_large"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Étape 6/6 - Associations d'icônes" />

    <!-- Description -->
    <TextView
        android:id="@+id/stepDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="@dimen/text_size_medium"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stepTitle"
        tools:text="Associez des mots-clés à des icônes pour vos événements (optionnel)" />

    <!-- Compteur d'associations -->
    <TextView
        android:id="@+id/associationsCount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textSize="@dimen/text_size_medium"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stepDescription"
        tools:text="3 association(s) créée(s)" />

    <!-- Bouton d'ajout -->
    <Button
        android:id="@+id/addAssociationButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Ajouter une association"
        android:textSize="@dimen/text_size_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/associationsCount" />

    <!-- Liste des associations -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/associationsRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toTopOf="@id/navigationButtons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addAssociationButton"
        tools:itemCount="3"
        tools:listitem="@layout/item_icon_association" />

    <!-- Message d'état vide -->
    <TextView
        android:id="@+id/emptyState"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Aucune association créée.\nUtilisez le bouton ci-dessus pour en ajouter."
        android:textSize="@dimen/text_size_medium"
        android:gravity="center"
        android:textColor="@android:color/darker_gray"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/associationsRecyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/associationsRecyclerView"
        tools:visibility="visible" />

    <!-- Boutons de navigation -->
    <LinearLayout
        android:id="@+id/navigationButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Bouton Précédent -->
        <Button
            android:id="@+id/previousButton"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/touch_target_large"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/spacing_small"
            android:text="Précédent"
            android:textSize="@dimen/text_size_medium" />

        <!-- Bouton Ignorer -->
        <Button
            android:id="@+id/skipButton"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/touch_target_large"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/spacing_small"
            android:layout_marginEnd="@dimen/spacing_small"
            android:text="Ignorer"
            android:textSize="@dimen/text_size_medium" />

        <!-- Bouton Terminer -->
        <Button
            android:id="@+id/finishButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/touch_target_large"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/spacing_small"
            android:text="Terminer"
            android:textSize="@dimen/text_size_medium" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>