<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_large"
    tools:context=".presentation.fragments.configuration.ConfigurationFragment">

    <!-- En-tête avec bouton retour -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="@dimen/touch_target_large"
            android:layout_height="@dimen/touch_target_large"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/back"
            android:src="@drawable/ic_arrow_back_24" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/widgets_configuration"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- Espace pour équilibrer le bouton retour -->
        <View
            android:layout_width="@dimen/touch_target_large"
            android:layout_height="@dimen/touch_target_large" />

    </LinearLayout>

    <!-- Barre de progression -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header" />

    <!-- Liste des widgets -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Widget Calendrier Google -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_large"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_medium">

                    <!-- En-tête du widget -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/google_calendar"
                            android:textSize="@dimen/text_size_large"
                            android:textStyle="bold" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/calendarWidgetToggle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="@dimen/touch_target_min"
                            android:minHeight="@dimen/touch_target_min" />

                    </LinearLayout>

                    <!-- Informations du widget (visible si activé) -->
                    <LinearLayout
                        android:id="@+id/calendarWidgetInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:orientation="vertical"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <TextView
                            android:id="@+id/calendarLastSync"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_medium"
                            tools:text="Dernière synchro: il y a 5 min ✓" />

                        <TextView
                            android:id="@+id/calendarEventsCount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textSize="@dimen/text_size_medium"
                            tools:text="12 événements récupérés" />

                        <TextView
                            android:id="@+id/calendarSyncStatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textSize="@dimen/text_size_medium"
                            tools:text="✓ Synchronisé" />

                    </LinearLayout>

                    <!-- Boutons d'action (visibles si activé) -->
                    <LinearLayout
                        android:id="@+id/calendarWidgetButtons"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:orientation="horizontal"
                        android:gravity="end"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <Button
                            android:id="@+id/calendarSyncButton"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/spacing_medium"
                            android:text="@string/sync_now"
                            android:minWidth="@dimen/touch_target_min"
                            android:minHeight="@dimen/touch_target_min" />

                        <Button
                            android:id="@+id/calendarConfigButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/configure_widget"
                            android:minWidth="@dimen/touch_target_min"
                            android:minHeight="@dimen/touch_target_min" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Placeholder pour les futurs widgets -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_extra_large"
                android:text="D'autres widgets seront ajoutés ici..."
                android:textSize="@dimen/text_size_medium"
                android:gravity="center"
                android:alpha="0.6" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>