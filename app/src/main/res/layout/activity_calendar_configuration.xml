<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_senior"
    tools:context=".presentation.widgets.calendar.configuration.CalendarConfigurationActivity">

    <!-- En-tête avec titre et progression -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_large"
        android:background="@color/primary_senior"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Titre principal -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Configuration Calendrier Google"
            android:textSize="@dimen/text_size_extra_large"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_marginBottom="@dimen/spacing_medium" />

        <!-- Indicateur d'étape -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Compteur d'étapes -->
            <TextView
                android:id="@+id/stepCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1/6"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginEnd="@dimen/spacing_medium" />

            <!-- Barre de progression par étapes -->
            <ProgressBar
                android:id="@+id/progressIndicator"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:layout_weight="1"
                android:max="6"
                android:progress="1"
                android:progressTint="@android:color/white"
                android:progressBackgroundTint="@color/primary_senior_dark"
                android:layout_marginEnd="@dimen/spacing_medium" />

            <!-- Pourcentage global -->
            <TextView
                android:id="@+id/overallProgressText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17%"
                android:textSize="@dimen/text_size_small"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <!-- Barre de progression globale -->
        <ProgressBar
            android:id="@+id/overallProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="@dimen/spacing_small"
            android:max="100"
            android:progress="17"
            android:progressTint="@color/secondary_senior"
            android:progressBackgroundTint="@color/primary_senior_dark" />

    </LinearLayout>

    <!-- Conteneur principal des fragments -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nav_host_fragment_config"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:defaultNavHost="true"
        app:navGraph="@navigation/calendar_config_nav_graph" />

</androidx.constraintlayout.widget.ConstraintLayout>