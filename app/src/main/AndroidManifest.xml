<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions réseau pour la synchronisation Google Calendar -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Permissions pour les alarmes de synchronisation automatique -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM"
        tools:targetApi="31" />

    <!-- Permission pour les services de premier plan (synchronisation) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <!-- Permissions pour les comptes Google (si implémentation complète) -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <application
        android:name=".SyniOraeApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Syniorae"
        tools:targetApi="31">

        <!-- MainActivity comme activité de lancement -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Syniorae">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- OAuthCallbackActivity -->
        <activity
            android:name=".presentation.activities.OAuthCallbackActivity"
            android:exported="true"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="com.syniorae" android:host="oauth" />
            </intent-filter>
        </activity>

        <!-- Activité pour le tunnel de configuration du calendrier -->
        <activity
            android:name=".presentation.activities.CalendarConfigurationActivity"
            android:exported="false"
            android:theme="@style/Theme.Syniorae"
            android:parentActivityName=".MainActivity" />

        <!-- Service de synchronisation du calendrier -->
        <service
            android:name=".services.CalendarSyncService"
            android:enabled="true"
            android:exported="false" />

        <!-- Récepteur pour les alarmes de synchronisation -->
        <receiver
            android:name=".services.SyncReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="com.syniorae.SYNC_CALENDAR" />
            </intent-filter>
        </receiver>

        <!-- Récepteur pour le redémarrage du système -->
        <receiver
            android:name=".services.BootReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED" />
                <action android:name="android.intent.action.PACKAGE_REPLACED" />
                <data android:scheme="package" />
            </intent-filter>
        </receiver>

        <!-- Provider pour les données exportées (futur) -->
        <provider
            android:name=".data.providers.SyniOraeContentProvider"
            android:authorities="com.syniorae.provider"
            android:enabled="false"
            android:exported="false" />

        <!-- Configuration de sauvegarde automatique -->
        <meta-data
            android:name="com.google.android.backup.api_key"
            android:value="AEdPqrEAAAAI7O2I8N0_dJQzBON" />

    </application>

</manifest>